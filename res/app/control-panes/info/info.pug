.row.stf-info.selectable(ng-controller='InfoCtrl',
  angular-packery='{draggable: true, draggableHandle: ".heading i"}')

  .col-md-4-x.packery-item
    .widget-container.fluid-height
      .heading
        stacked-icon(icon='fa-location-arrow', color='color-pink')
        span(translate) Physical Device
        .pull-right
          button(ng-click='device.ios ? press("finder") : finder()').btn.btn-xs.btn-primary-outline
            i.fa.fa-info
            span(translate) Find Device

      .widget-content.padded-small
        div.infocard-table
          div.infocard-table__row
            div.infocard-table__item(translate) Place
            div.infocard-table__item {{device.provider.name}}
          div.infocard-table__row(ng-show='device.name && device.image')
            div.infocard-table__item
            div.infocard-table__item
              button(ng-click='openDevicePhoto(device)').btn.btn-xs.btn-primary-outline
                i.fa.fa-picture-o
                span(translate) Device Photo

  .col-md-4-x.packery-item
    .widget-container.fluid-height
      .heading
        stacked-icon(icon='fa-bolt', color='color-yellow')
        span(translate) Battery
      .widget-content.padded-small
        div.infocard-table
          div.infocard-table__row
            div.infocard-table__item(translate) Health
            div.infocard-table__item {{device.battery.health | batteryHealth | translate}}
          div.infocard-table__row
            div.infocard-table__item(translate) Power Source
            div.infocard-table__item {{device.battery.source | batterySource | translate}}
          div.infocard-table__row
            div.infocard-table__item(translate) Status
            div.infocard-table__item {{device.battery.status | batteryStatus | translate}}
          div.infocard-table__row
            div.infocard-table__item(translate) Level
            div.infocard-table__item
              uib-progressbar(value='device.battery.level || 0', animate='false', max='device.battery.scale', type='success')
                span {{ device.battery.level ? (device.battery.level / device.battery.scale * 100) : '-' }}%
          div.infocard-table__row
            div.infocard-table__item(translate) Temperature
            div.infocard-table__item {{device.battery.temp}} °C
          div.infocard-table__row
            div.infocard-table__item(translate) Voltage
            div.infocard-table__item {{device.battery.voltage}} v

